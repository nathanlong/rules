<h2 class="m-0">Four-Player Games</h2>

{% set postslist = collections.posts | sort(attribute="data.title") %}
{% include "filter.njk" %}

<hr>

<h3>Best at 4:</h3>

<ul class="postlist flow" data-filter-entry-section>
  {% for post in postslist %}
  {% if post.data.bestplayers === 4 %}
  {% include "postitem.njk" %}
  {% endif %}
  {% endfor %}
</ul >

<hr>

<h3>Other 4 Player Games:</h3>

<ul class="postlist flow" data-filter-entry-section>
  {% for post in postslist %}
  {% if post.data.maxplayers >= 4 and post.data.minplayers < 5 and post.data.bestplayers !== 4 %}
  {% include "postitem.njk" %}
  {% endif %}
  {% endfor %}
</ul >

